{
  "rules": {
    "social": {
      ".read": true,
      ".write": "auth.token.email === 'abrahorus@gmail.com'"
    },
    "stats": {
      ".read": true,
      ".write": "auth != null"
    },
    "users": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    },
    "userLikes": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    },
    "comments": {
      ".read": true,
      ".write": "auth != null"
    },
    "chat_global": {
        ".read": true,
        ".write": "auth != null"
    }
  }
}